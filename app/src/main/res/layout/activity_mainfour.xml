<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/title_view"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
         />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Weight"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/view_weight"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_below="@id/button_id"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Results"
        android:textAlignment="center"
        android:textSize="20sp" />
    <Button
        android:id="@+id/button_weight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Calculate Weight"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_weight"
        android:layout_margin="10dp"
        android:layout_marginTop="25dp"/>

    <Spinner
        android:id="@+id/spinner_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edit_weight"
        android:layout_marginEnd="85dp"
        android:entries="@array/weight_arrays"
        android:prompt="@string/spinner_weight" />




</RelativeLayout>