<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <EditText
        android:id="@+id/title_distance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="'Mile' or 'Kilometer'"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:background="@color/white"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/page_title"
        android:text="Distance"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:textSize="18pt"
        />

    <EditText
        android:id="@+id/edit_distance"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Distance"
        android:textSize="20sp"
        android:inputType="number"
        android:background="@color/white"/>


    <Button
        android:id="@+id/button_distance"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="45dp"
        android:text="Calculate Distance"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_distance"
        android:background="@color/white" />


    <TextView
        android:id="@+id/view_distance"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@id/edit_distance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Results"
        android:background="@color/white"/>


</RelativeLayout>