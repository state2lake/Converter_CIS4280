<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <EditText
        android:id="@+id/edit_distance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Distance"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/view_distance"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/edit_distance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Results" />


    <Button
        android:id="@+id/button_distance"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:text="Calculate Distance"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_distance"
        />








    // there should be a keyboard that pops up when text edit is selected and goes away when drop
    down is selected

</RelativeLayout>