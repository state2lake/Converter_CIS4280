<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:text="Temperature"
        android:textSize="18pt" />

    <EditText
        android:id="@+id/title_temperature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:background="@color/white"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="'Fahrenheit' or 'Celsius'"
        android:inputType="text" />





    <EditText
        android:id="@+id/edit_temperature"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="211dp"
        android:background="@color/white"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Temperature"
        android:textSize="20sp"
        android:inputType="numberDecimal|numberSigned"/>


    <Button
        android:id="@+id/button_temperature"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:background="@color/white"
        android:onClick="displayResults"
        android:text="Calculate Temperature" />


    <TextView
        android:id="@+id/view_temperature"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Results" />




</RelativeLayout>