<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/title_temperature"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="'Fahrenheit' or 'Celsius'"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edit_temperature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Temperature"
        android:textSize="20sp"
        android:inputType="numberDecimal|numberSigned" />




    <TextView
        android:id="@+id/view_temperature"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:text="Results"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:onClick="displayResults"
        android:text="Calculate Temperature" />

    // there should be a keyboard that pops up when text edit is selected and goes away when drop down is selected

</RelativeLayout>